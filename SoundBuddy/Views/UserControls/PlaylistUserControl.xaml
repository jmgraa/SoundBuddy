<UserControl x:Class="SoundBuddy.Views.UserControls.PlaylistUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoundBuddy.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Stretch">
            <Image Name="ImgCover" Width="100" Height="100" Margin="10"/>
            <Label Name="LbName" Content="PLAYLIST NAME" VerticalAlignment="Center" Foreground="White" FontSize="40" Margin="10"/>
            <Label Name="LbDescription" Content="DESCRIPTION" VerticalAlignment="Center" Foreground="White" FontSize="15" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
