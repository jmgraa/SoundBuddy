<UserControl x:Class="SoundBuddy.Views.UserControls.PlaylistUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SoundBuddy.Views.UserControls"
             mc:Ignorable="d" 
             Height="60"
             MouseDoubleClick="PlaylistUserControl_OnMouseDoubleClick">
    <Border BorderBrush="#C87720" BorderThickness="0, 0, 0, 1" ContextMenuOpening="FrameworkElement_OnContextMenuOpening">
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Rename" />
                <MenuItem Header="Delete" />
            </ContextMenu>
        </Border.ContextMenu>

        <Grid HorizontalAlignment="Stretch" Background="#282828">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Stretch">
                <Image Name="ImgCover" Width="50" Height="50" Margin="5"/>
                <Label Name="LbName" Content="PLAYLIST NAME" VerticalAlignment="Center" Foreground="White" FontSize="20" Margin="5"/>
                <Label Name="LbDescription" Content="DESCRIPTION" VerticalAlignment="Center" Foreground="White" FontSize="10" Margin="5"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
