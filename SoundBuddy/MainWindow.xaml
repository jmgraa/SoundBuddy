<Window x:Class="SoundBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoundBuddy"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Window.Resources>
        <Style TargetType="Button" x:Key="WindowControlButton">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
        </Style>

        <Style TargetType="Button" x:Key="ControlButton">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="{StaticResource FontAwesome}"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="Button" x:Key="SecondaryControlButton"
               BasedOn="{StaticResource ControlButton}">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Opacity" Value="0.4" />
        </Style>
    </Window.Resources>

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Rectangle Grid.Column="0" Fill="#191919"></Rectangle>
            <Rectangle Grid.Column="1" Fill="#282828"></Rectangle>

            <Grid Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="210"/>
                        <RowDefinition Height="170"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Label Content="SoundBuddy" FontSize="15" Foreground="White"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Image Width="200" Height="200" Margin="5"/>
                    </Grid>

                    <Grid Grid.Row="2">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Label Content="Title" Foreground="White" FontSize="30" HorizontalContentAlignment="Center"/>
                            <Label Content="Artist" Foreground="White" FontSize="20" HorizontalContentAlignment="Center"/>
                            <Label Content="Album" Foreground="White" FontSize="15" HorizontalContentAlignment="Center"/>
                            <Label Content="Data" Foreground="White" FontSize="15" HorizontalContentAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="3">
                        <Label Content="VISUALIZER" FontSize="15" Foreground="White"/>
                    </Grid>
                </Grid>
            </Grid>
            
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="🗕" Style="{StaticResource WindowControlButton}"/>
                        <Button Content="🗗" Style="{StaticResource WindowControlButton}"/>
                        <Button Content="X" Style="{StaticResource WindowControlButton}"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>

                        <Rectangle Grid.Row="0" Fill="#1F1F1F"/>
                        <Rectangle Grid.Row="2" Fill="#1F1F1F"/>

                        <Grid Grid.Row="0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Button Content="Local files" Foreground="White" Background="Transparent" FontSize="15" BorderThickness="0" Margin="5, 0, 5, 0"/>
                                <Button Content="Playlists" Foreground="White" Background="Transparent" FontSize="15" BorderThickness="0" Margin="5, 0, 5, 0"/>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="1">
                            <ListView x:Name="songListView" ItemsSource="{Binding AllSongs}" Background="Transparent">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Tytuł" DisplayMemberBinding="{Binding Title}"/>
                                        <GridViewColumn Header="Wykonawca" DisplayMemberBinding="{Binding Artist}"/>
                                        <GridViewColumn Header="Album" DisplayMemberBinding="{Binding Album}"/>
                                        <GridViewColumn Header="Genre" DisplayMemberBinding="{Binding Genre}"/>
                                        <GridViewColumn Header="Year" DisplayMemberBinding="{Binding Year}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <Rectangle Grid.Row="1" Fill="#C87720"></Rectangle>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="&#xf048;" Style="{StaticResource ControlButton}"/>
                        <Button Content="&#xf04d;" Style="{StaticResource ControlButton}"/>
                        <Button Content="&#xf144;" FontSize="40" Style="{StaticResource ControlButton}"/>
                        <Button Content="&#xf04c;" Style="{StaticResource ControlButton}"/>
                        <Button Content="&#xf051;" Style="{StaticResource ControlButton}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="&#xf363;" Style="{StaticResource SecondaryControlButton}"/>
                        <Button Content="&#xf074;" Style="{StaticResource SecondaryControlButton}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label Content="99:99" Foreground="White"/>
                        <Label Content="PROGRESS BAR" Foreground="White"/>
                        <Label Content="99:99" Foreground="White"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                        <Label Content="VOLUME" Foreground="White"/>
                        <Label Content="VOLUME BAR" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        
    </Grid>
</Window>
